.siteViewItem text {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(99,97,97,1);
  line-height: 70rpx;
}
.siteViewItem ._input {
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(197,192,192,1);
  line-height: 54rpx;
  height: 54rpx;
  width: 575rpx;
  padding: 15rpx 15rpx;
  color: rgba(99,97,97,1);
