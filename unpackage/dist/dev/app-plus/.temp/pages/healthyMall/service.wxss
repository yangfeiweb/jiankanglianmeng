@import "../../common/vendor.wxss";

.serviceHeaderView {
  position: relative;
  height: 544rpx;
}
.serviceBg {
  width: 100%;
  position: absolute;
  top: 0%;
  left: 0%;
  height: 544rpx;
}
.HeaderView {
  position: absolute;
  top: 63rpx;
  left: 0%;
  height: 544rpx;
  width: 100%;
}
.serviceHeader {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.serviceHeader text {
  text-align: center;
}
.serviceHeader .title {
  font-size: 34rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255,255,255,1);
  margin-bottom: 23rpx;
}
.serviceHeader .serviceTime {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255,255,255,1);
  margin-bottom: 40rpx;
}
.serviceHeader .serviceBtn {
  width: 221rpx;
  height: 61rpx;
  border: 1rpx solid rgba(255,255,255,1);
  border-radius: 9rpx;
  height: 61rpx;
  font-size: 34rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255,255,255,1);
}
.serviceListTitle {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  height: 70rpx;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.serviceListTitle .line {
  width: 280rpx;
  height: 1rpx;
  background: rgba(238,238,238,1);
}
.serviceListTitle .title {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(165,165,165,1);
}
.list-collapse {
  padding-left: 36rpx;
  box-sizing: border-box;
}
.uni-card {
  width: 100%;
