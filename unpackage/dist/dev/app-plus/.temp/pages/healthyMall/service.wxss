  box-shadow: none;
}
.page-pd {
  border: none !important;
}
.uni-list {
  border: none !important;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153,153,153,1);
  line-height: 54rpx;
}
.uni-navigate-bottom {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
